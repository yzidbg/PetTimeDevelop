<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.FragmentoMascotas">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoMasc"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_pet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listado de tus Mascotas"
            android:id="@+id/txtTituloMasc"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="@android:style/TextAppearance.Large"
            android:visibility="visible"
            android:elegantTextHeight="false"
            android:textColor="@color/abc_secondary_text_material_light"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22dp" />

        <TextView
            style="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mas_cuidado"
            android:id="@+id/txtSubTituloBv"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:elegantTextHeight="false"
            android:textColor="@color/abc_secondary_text_material_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_regMascotas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Registrar Mascotas"/>

    </LinearLayout>

</FrameLayout>
